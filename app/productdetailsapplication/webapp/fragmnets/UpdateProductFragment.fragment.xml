<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="updateProductDialog" title="Update Product"  class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer" >
        <VBox>
            <Label text="Product Id" labelFor="productIdInput" design="Bold"/>
            <Input id="updateProductIdInput"/>

            <Label text="Product Name" labelFor="productNameInput" design="Bold"/>
            <Input id="updateProductNameInput"/>
            
            <Label text="Characteristic Name" labelFor="charNameInput" design="Bold"/>
            <Input id="updateCharNameInput" />
            
            <Label text="Characteristic Value" labelFor="charValueInput" design="Bold"/>
            <Input id="updateCharValueInput"/>
        </VBox>
        <beginButton>
            <Button text="Submit" press="onUpdateSubmitCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onUpdateCancelCreate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>