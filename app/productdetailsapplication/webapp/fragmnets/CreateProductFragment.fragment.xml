<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="productDialog" title="Create Product"  class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer" >
        <VBox>
            <Label text="Product Name" labelFor="productNameInput" design="Bold"/>
            <Input id="productNameInput"/>
            
            <Label text="Characteristic Name" labelFor="charNameInput" design="Bold"/>
            <Input id="charNameInput" />
            
            <Label text="Characteristic Value" labelFor="charValueInput" design="Bold"/>
            <Input id="charValueInput"/>
        </VBox>
        <beginButton>
            <Button text="Submit" press="onSubmitCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelCreate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
